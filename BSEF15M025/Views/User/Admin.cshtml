
@{
    ViewBag.Title = "Admin";
}
<style>
    input[type=submit] {
        background-color: beige;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }

    .grid-container > div {
        background-color: crimson;
        padding-left: 20px;
        margin-left: 450px;
        margin-right: 100px;
        margin-top: 100px;
        width: 400px;
    }

    .item1 {
        grid-row: 1/4;
    }
</style>

<form method="post" action='@Url.Content("~/User/AdminHome")'>
    <div class="grid-container">
        <div class="item1" align="center">

            <h1>Admin</h1>
            <table>

                <tr>
                    <td>Login:</td>
                    <td><input type="text" placeholder="Enter Login" name="login"></td>
                </tr>
                <tr>
                    <td>Password:</td>
                    <td><input type="password" placeholder="Enter Password" name="pswd"></td>
                </tr>

                <tr>
                    <td><input type="submit" value="Login" name="login"></td>
                    <td><a href="@Url.Action("MainScreen", "Main")"> Cancel</a></td>
                </tr>
            </table>
        </div>
    </div>
</form>






