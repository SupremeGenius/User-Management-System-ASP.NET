@{
    ViewBag.Title = "AdminHome";
}
<style>
    input[type=submit] {
        background-color: beige;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }

    .grid-container > div {
        background-color: crimson;
        padding-left: 20px;
        margin-left: 450px;
        margin-right: 100px;
        margin-top: 100px;
        width: 500px;
    }

    .item1 {
        grid-row: 1/4;
    }

    table, thead, td {
        border: 1px solid black;
    }
</style>
<div class="grid-container">
    <div class="item1" align="center">
        Users<input type="submit" value="Logout" name="logout" onclick="@("window.location.href='" + @Url.Action("MainScreen", "Main") + "'");">

        <table>
            @{
                var dal = new BSEF15M025.Models.DAL();

            }
            <thead>
                <tr>
                    @foreach (System.Data.DataColumn col in dal.GetUsersGrid().Columns)
                    {

                        <th>@col.ColumnName</th>
                    }
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in dal.GetUsersGrid().Rows)
                {
                    <tr>
                        @foreach (System.Data.DataColumn col in dal.GetUsersGrid().Columns)
                        {
                            <td>@row[col.ColumnName]</td>
                        }

                        <td><input type="submit" value="edit" name=@row["UserId"] onclick="@("window.location.href='" + @Url.Action("Edit", "User",new { UserId=@row["UserId"] }) + "'");"></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>







