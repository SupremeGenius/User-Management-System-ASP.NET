@model BSEF15M025.Models.UserDTO
@{
    ViewBag.Title = "Home";
}

<style>
    .grid-container > div {
        background-color: crimson;
        padding-left: 20px;
        margin-left: 450px;
        margin-right: 100px;
        margin-top: 100px;
        height: 500px;
        width: 500px;
    }

    .item1 {
        grid-row: 1/4;
    }

    input[type=submit] {
        background-color: beige;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
    }
</style>

@{
    var userLogged = (BSEF15M025.Models.UserDTO)Session["user"];
}
<div class="grid-container">
    <div class="item1" align="center">

        <h1>Home</h1>
        <table>

            <tr>
                <td colspan="3"> welcome @Model.login</td>
                <td></td>
                <td></td>
                <td>                   
                   <img src="~/Images/@Model.img" alt="" width="75" height="75" />
                </td>
            </tr>            
            <tr></tr>
            <tr>
                <td></td>
                <td></td><td></td>
                @{
                    Session["edit"] = true;
                }

                <td><input type="submit" value="Edit Profile" id="edit" onclick="@("window.location.href='" + @Url.Action("NewUser", "User", new {login=@Model.login }) + "'");"></td>
                <td><input type="submit" value="Logout" id="logout" onclick="@("window.location.href='" + @Url.Action("MainScreen", "Main") + "'");"></td>
            </tr>
        </table>
    </div>
</div>







