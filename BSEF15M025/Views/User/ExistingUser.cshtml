
@{
    ViewBag.Title = "ExistingUser";
}

<style>
    input[type=submit] {
        background-color: beige;
        border: none;
        color: black;
        padding: 16px 32px;
        text-decoration: none;
        margin: 4px 2px;
        cursor: pointer;
        
    }
    .grid-container > div {
        background-color: crimson;
        padding-left: 20px;
        margin-left: 450px;
        margin-right: 100px;
        margin-top: 100px;
        width: 500px;
    }

    .item1 {
        grid-row: 1/4;
    }
</style>


<div class="grid-container">
    <div class="item1" align="center">
        <form method="post" action='@Url.Content("~/User/Login")'>
            <h1>Existing User</h1>
                    Login:  
                    <input type="text" placeholder="Enter Login" name="login" >
                Password:
                    <input type="password" placeholder="Enter Password" name="pswd" >
            <input type="submit" value="Login" name="submit">
            <a href="@Url.Action("MainScreen", "Main")"> Cancel</a>
                   
        </form>
        <form method="post" action='@Url.Content("~/User/ForgetPassword")'>
            Forget Password?<br />
            email:
            <input type="text" placeholder="Enter Email" name="email">
            <input type="submit" value="Reset password" name="submit">
        </form>
    </div>
</div>






